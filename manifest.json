{
  "manifest_version": 2,
  "name": "Meta Connections",
  "version": "1.0",
  "description": "Build an Extension!",
  "permissions": [
    "http://127.0.0.1/*",
    "activeTab",
    "tabs",
    "declarativeContent",
    "storage",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["src/css/background.css"],
      "js": ["src/script/background.js"]
    }
  ],
  "browser_action": {
    "default_popup": "src/html/popup.html",
    "default_icon": "images/icon.png"
  },
  "background": {
    "scripts": [
      "src/script/background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}